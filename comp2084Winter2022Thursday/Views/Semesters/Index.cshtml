@model IEnumerable<comp2084Winter2022Thursday.Models.Semester>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cours.CourseCode)
        </th>
        <th>
            <!--
    @Html.DisplayNameFor(model => model.Prof.FirstName)
        -->
            Prof Name
        </th>
        <th>
            <!--
                @Html.DisplayNameFor(model => model.Student.FirstName)
                -->
            Student Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <!--
                @Html.DisplayFor(modelItem => item.Cours.CourseCode)
        -->
                @Html.ActionLink(item.Cours.CourseCode, "Details", "Courses", 
               new { id = item.CourseID }, null)


            </td>
            <td>
                <!--
    @Html.DisplayFor(modelItem => item.Prof.FirstName )
        -->
                @{
                    string FullNameProf = item.Prof.FirstName + " " + item.Prof.LastName;
                } 

                @FullNameProf
            </td>
            <td>
                <!--
    @Html.DisplayFor(modelItem => item.Student.FirstName)
        -->
                @{
                    string FullNameStudent = item.Student.FirstName + " " + item.Student.LastName;
                }

                @FullNameStudent

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term)
            </td>
            <td>
                <!--
                @Html.DisplayFor(modelItem => item.Year)
                    -->
                @Convert.ToInt32(item.Year)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SemesterID }) |
                @Html.ActionLink("Details", "Details", new { id=item.SemesterID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SemesterID })
            </td>
        </tr>
    }

    </table>
